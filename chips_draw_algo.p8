function draw_chips()

chip_vals={50,25,10,5,1}
chip_amount={}
bet = 184 
offset=0

for v in all(chip_vals) do
	y = (v * (flr(bet/v)))
	add(chip_amount,flr(bet/v))
	bet-=y
end

for i=1,5 do
	if chip_amount[i]==0 then
		offset+=1
	end

	n=6-i
	
	for j=1,chip_amount[i] do
		spr(n,64+(i-offset)*8,64-j*3)
	end

end

end
